
@model IEnumerable<GitUser>

@{
    ViewBag.Title = "GitUser";
}

<h2>Git User</h2>


<form method="get">
    <p>
        User Name: <input name="userName" value="@ViewBag.userName" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                 @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
           </th>
            <th>
                @Html.DisplayNameFor(model => model.repos_url)
           </th>
              <th>
                @Html.DisplayNameFor(model => model.followers_url)
           </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model) {
            <tr>
            <td>
                 @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
           </td>
            <td>
                @Html.DisplayFor(modelItem => item.repos_url)
           </td>
            <td>
                @Html.DisplayFor(modelItem => item.followers_url)
           </td>
            </tr>
        }
    </tbody>
</table>